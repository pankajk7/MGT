<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff" >
    
    
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp">
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#4c566c"
        android:textStyle="bold"
        android:textSize="18dp"        
        android:text="Edit Workers Comp"/>
    </LinearLayout>
    
    <LinearLayout         
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">      

        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_weight="2.3" 
            android:text="Injury Date"
            android:textColor="#4c566c"           
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <EditText
            android:id="@+id/edittext_editworkerscomp_injurydate"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_round_corners"
            android:hint="26/03/14"
            android:paddingLeft="5dp"
            android:textSize="14dp" />
        
    </LinearLayout>
    
    
    <LinearLayout         
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">      

        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_weight="2.3" 
            android:text="Case No."
            android:textColor="#4c566c"           
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <EditText
            android:id="@+id/edittext_editworkerscomp_casenumber"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_round_corners"
            android:hint="abc123"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textSize="14dp" />
        
    </LinearLayout>
    
    
     <LinearLayout         
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">      

        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:textColor="#4c566c"    
            android:layout_weight="2.3"        
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <EditText
            android:id="@+id/edittext_editworkerscomp_notes"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_round_corners"
            android:hint="abc123"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textSize="14dp" />
        
    </LinearLayout>
    
    
     <LinearLayout         
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">      

        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.25"
            android:text="Return Date"
            android:textColor="#4c566c"          
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <EditText
            android:id="@+id/edittext_editworkerscomp_returndate"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_round_corners"
            android:hint="27/03/14"
            android:paddingLeft="5dp"
            android:textSize="14dp" />
        
    </LinearLayout>
    
      
       <LinearLayout         
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">      

        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center|left"
            android:text="Share"
            android:textColor="#4c566c"    
            android:layout_weight="1"        
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <Button
            android:id="@+id/btn_editworkerscomp_share_yes"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_yes"
            android:text="Yes"
            android:textColor="#ffffff" />
        
        <View
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1.4" />
        
        <Button
            android:id="@+id/btn_editworkerscomp_share_no"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_no"
            android:text="No"
            android:textColor="#ffffff" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical" >

       <Button
           android:id="@+id/btn_editworkerscomp_calendar"
           android:layout_width="match_parent"
           android:layout_height="40dp"
      
           android:layout_marginRight="20dp"
           android:layout_marginLeft="20dp"
           android:background="@drawable/btn_bottom_purple_color"
           android:text="Edit WCL in Calendar"
           android:textAppearance="?android:attr/textAppearanceMedium"
           android:textColor="#ffffff" />
       
          <Button
           android:id="@+id/btn_editworkerscomp_delete"
           android:layout_width="match_parent"
           android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
           android:layout_marginRight="20dp"
           android:layout_marginLeft="20dp"
           android:background="@drawable/btn_bottom_red_color"
           android:text="Delete WCL"
           android:textAppearance="?android:attr/textAppearanceMedium"
           android:textColor="#ffffff" 
           android:visibility="visible"/>

    </LinearLayout>
     
 
 </LinearLayout>