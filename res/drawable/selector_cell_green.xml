<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <!-- Active tab -->
<item  android:state_focused="false" android:state_pressed="false" android:state_selected="false">
     <shape >
           
              <solid android:color="@color/Calendar_green" />
              <stroke android:width="1dp" android:color="@color/white"/>
      </shape>
</item> 
<!-- Inactive tab -->
<item  android:state_focused="false" android:state_pressed="false" android:state_selected="true">
      <shape > <solid android:color="#44FFFFFF" /></shape>
</item>


<!-- Pressed tab -->
<item  android:state_pressed="true">
    <shape > <solid android:color="#44FFFFFF" /></shape>
</item>
<!-- Selected tab (using d-pad) -->
<item  android:state_focused="true" android:state_pressed="false" android:state_selected="true">
       <shape > <solid android:color="#44FFFFFF" /></shape>
</item>

</selector>